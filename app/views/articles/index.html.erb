<h1> Listing Existing Articles </h1>

<p>
    <%= link_to "Create new Article", new_article_path%>
</p>

<table>
    <tr>
        <td>ID</td>
        <td>Title</td>
        <td>Text</td>
    </tr>

<% @articles.each do |article| %>

    <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to "Show", article_path(article) %></td>        
        <td><%= link_to "Edit", edit_article_path(article) %></td>
    </tr>

<%end%>

</table>