<%= render 'shared/errors', obj:@article %>

<div class='row'>
  <div class='col-xs-12'>

    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |form| %>

        <div class="form-group">
          <div class="col-sm-2 control-label">
            <%= form.label :title %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :title, class:"form-control", placeholder:"Enter Title", autofocus:true %>  
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-2 control-label">
            <%= form.label :description %>
          </div>
          <div class="col-sm-8">
            <%= form.text_area :description,  rows: 10, class:"form-control", placeholder:"Enter Description" %>  
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      <% end %>

      <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
      </div>
  </div>
 </div> 
  